---
// Import SecondaryCTA component for use in this module
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";
import Icon from "@components/ui/icons/Icon.astro";

// Define props from Astro
const { pricing } = Astro.props;

// Define TypeScript type for products.
type Product = {
  name: string;
  description: string;
  price: string;
  cents: string;
  billingFrequency: string;
  features: Array<string>;
  purchaseBtnTitle: string;
  purchaseLink: string;
};

interface PricingSectionProps {
  title: string;
  subTitle: string;
  badge: string;
  thirdOption: string;
  btnText: string;
  pricing: {
    title: string;
    subTitle: string;
    starterKit: Product;
    professionalToolbox: Product;
  };
}
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
>
  <!-- Section heading and sub-heading -->
  <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
    <h2
      class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
    >
      {pricing.title}
    </h2>
    <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
      {pricing.subTitle}
    </p>
  </div>
  <!-- Contains three main package blocks -->
  <div class="flex flex-wrap items-center justify-center gap-4 sm:gap-0">
    <!-- Bronze package details -->
    <div
    class="w-full rounded-xl bg-bronze p-6 sm:w-1/2 sm:rounded-r-none sm:p-8 lg:w-1/3"
  >
    <div class="mb-4">
      <h3 class="text-2xl font-bold text-neutral-100 sm:text-3xl">
        {pricing.bronzePackage.name}
      </h3>
      <p class="text-white">{pricing.bronzePackage.description}</p>
    </div>

    <div class="mb-4">
      <span class="text-4xl font-bold text-white"
        >{pricing.bronzePackage.price}</span
      >
      <span class="text-lg font-bold text-white"
        >{pricing.bronzePackage.cents}</span
      >
      <span class="ms-3 text-sm text-white"
        >{pricing.bronzePackage.billingFrequency}</span
      >
    </div>
    <!-- Features list - automatically created by mapping over `features` array -->
    <ul class="mb-6 space-y-2 text-white">
      {
        pricing.bronzePackage.features.map((feature: string) => (
          <li class="flex items-center gap-1.5">
            <Icon name="checkCircle" />

            <span>{feature}</span>
          </li>
        ))
      }
    </ul>
    <!-- CTA for purchasing the product -->
    <a
      href={pricing.bronzePackage.purchaseLink}
      class="block rounded-lg bg-darkbronze px-8 py-3 text-center text-sm font-bold text-white outline-none ring-indigo-300 transition duration-100 hover:bg-black hover:text-white focus-visible:ring active:text-gray-300 md:text-base"
      >{pricing.bronzePackage.purchaseBtnTitle}</a
    >
  </div>
  <!--Silver Package -->
    <div
      class="w-full rounded-xl bg-silver p-6 sm:w-1/2 sm:rounded-r-none sm:p-8 lg:w-1/3"
    >
      <div class="mb-4">
        <h3 class="text-2xl font-bold text-white sm:text-3xl">
          {pricing.silverPackage.name}
        </h3>
        <p class="text-white">{pricing.silverPackage.description}</p>
      </div>

      <div class="mb-4">
        <span class="text-4xl font-bold text-white"
          >{pricing.silverPackage.price}</span
        >
        <span class="text-lg font-bold text-white"
          >{pricing.silverPackage.cents}</span
        >
        <span class="ms-3 text-sm text-white"
          >{pricing.silverPackage.billingFrequency}</span
        >
      </div>
      <!-- Features list - automatically created by mapping over `features` array -->
      <ul class="mb-6 space-y-2 text-white">
        {
          pricing.silverPackage.features.map((feature: string) => (
            <li class="flex items-center gap-1.5">
              <Icon name="checkCircle" />

              <span>{feature}</span>
            </li>
          ))
        }
      </ul>
      <!-- CTA for purchasing the product -->
      <a
        href={pricing.silverPackage.purchaseLink}
        class="block rounded-lg bg-darkGrayTeam px-8 py-3 text-center text-sm font-bold text-white outline-none ring-indigo-300 transition duration-100 hover:bg-black hover:text-white focus-visible:ring active:text-gray-300 md:text-base"
        >{pricing.silverPackage.purchaseBtnTitle}</a
      >
    </div>
    <!-- Gold Package details -->
    <div
      class="w-full rounded-xl bg-gradient-to-tr from-[#FFAA1D] to-[#FFBF00] p-6 shadow-xl sm:w-1/3 sm:p-8"
    >
      <div
        class="mb-4 flex flex-col items-start justify-between gap-4 lg:flex-row"
      >
        <div>
          <h3 class="text-2xl font-extrabold text-white sm:text-3xl">
            {pricing.goldPackage.name}
          </h3>
          <p class="text-white">{pricing.goldPackage.description}</p>
        </div>

        <span
          class="order-first inline-block rounded-full bg-black bg-opacity-50 px-3 py-1 text-xs font-bold uppercase tracking-wider text-center text-white lg:order-none"
          >{pricing.badge}</span
        >
      </div>

      <div class="mb-4">
        <span class="text-6xl font-bold text-white"
          >{pricing.goldPackage.price}</span
        >
        <span class="text-lg font-bold text-white"
          >{pricing.goldPackage.cents}</span
        >
        <span class="ms-3 text-white"
          >{pricing.goldPackage.billingFrequency}</span
        >
      </div>
      <!-- Features list - automatically created by mapping over `features` array -->
      <ul class="mb-6 space-y-2 text-white">
        {
          pricing.goldPackage.features.map((feature: string) => (
            <li class="flex items-center gap-1.5">
              <Icon name="checkCircle" />

              <span>{feature}</span>
            </li>
          ))
        }
      </ul>
      <!-- CTA for purchasing the product -->
      <a
        href={pricing.goldPackage.purchaseLink}
        class="block rounded-lg bg-black bg-opacity-50 px-8 py-3 text-center text-sm font-bold text-white outline-none ring-orange-300 transition duration-100 hover:bg-gray-600 hover:bg-opacity-50 focus-visible:ring active:bg-orange-400 md:text-base"
        >{pricing.goldPackage.purchaseBtnTitle}</a
      >
    </div>
  </div>
  <!-- Call to action for Enterprise Solutions -->
  <div class="mt-8 flex items-center justify-center gap-x-3 md:mt-12">
    <p class="text-sm text-neutral-600 dark:text-neutral-400">
      {pricing.thirdOption}
    </p>

    <SecondaryCTA title={pricing.btnText} url="/contact" />
  </div>
</section>
